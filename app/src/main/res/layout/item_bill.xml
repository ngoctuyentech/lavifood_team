<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bill"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_bill_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_bill_productname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="Yến 1 Yến 1 Yến 1 Yến 1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_bill_order"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_bill_quantity"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_item_bill_unit_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="100,000 100,000 100,000 100,000 "
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_bill_quantity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_bill_total"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/tv_item_bill_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="180dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_bill_order" />

    <TextView
        android:id="@+id/tv_item_bill_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="200,000"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>