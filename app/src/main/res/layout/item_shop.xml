<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:id="@+id/item_shop">

    <ImageView
        android:id="@+id/iv_item_shop_pic"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/storefront" />

    <TextView
        android:id="@+id/tv_item_client_sale_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Cửa hàng A"
        android:maxLines="2"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_item_shop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0123456789 hkhh jhkjh khk khkjh khl lkh"
        android:maxLines="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_client_sale_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_shop_pic"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_item_shop_remove" />

    <ImageView
        android:id="@+id/iv_item_shop_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_remove_black_24dp" />


</android.support.constraint.ConstraintLayout>