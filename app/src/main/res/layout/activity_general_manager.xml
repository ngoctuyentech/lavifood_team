<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nestart.nestart.pos.GeneralManagerActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_general_manager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_general_manager">

        <ImageView
            android:id="@+id/iv_general_manger_sale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_general_manger_debt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sale_volume" />

        <ImageView
            android:id="@+id/iv__general_manger_warehouse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_general_manger_debt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView164"
            app:srcCompat="@drawable/ic_warehouse" />

        <ImageView
            android:id="@+id/iv_general_manger_debt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_liability" />

        <TextView
            android:id="@+id/textView164"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Doanh số"
            app:layout_constraintEnd_toEndOf="@+id/iv_general_manger_sale"
            app:layout_constraintStart_toStartOf="@+id/iv_general_manger_sale"
            app:layout_constraintTop_toBottomOf="@+id/iv_general_manger_sale"
            tools:layout_editor_absoluteX="37dp" />

        <TextView
            android:id="@+id/textView172"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Công nợ"
            app:layout_constraintEnd_toEndOf="@+id/iv_general_manger_debt"
            app:layout_constraintStart_toStartOf="@+id/iv_general_manger_debt"
            app:layout_constraintTop_toBottomOf="@+id/iv_general_manger_debt"
            tools:layout_editor_absoluteX="181dp" />

        <TextView
            android:id="@+id/textView175"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tồn kho"
            app:layout_constraintEnd_toEndOf="@+id/iv__general_manger_warehouse"
            app:layout_constraintStart_toStartOf="@+id/iv__general_manger_warehouse"
            app:layout_constraintTop_toBottomOf="@+id/iv__general_manger_warehouse"
            tools:layout_editor_absoluteX="41dp" />
        <ImageView
            android:id="@+id/iv_general_manager_employeeSale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_people_512"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv__general_manger_warehouse"
            android:layout_marginBottom="0dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/tv200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Doanh số NV"
            app:layout_constraintLeft_toLeftOf="@+id/iv_general_manager_employeeSale"
            app:layout_constraintRight_toRightOf="@+id/iv_general_manager_employeeSale"
            app:layout_constraintTop_toBottomOf="@+id/iv_general_manager_employeeSale" />


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
