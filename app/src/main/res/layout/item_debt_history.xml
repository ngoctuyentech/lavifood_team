<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/item_debt_history"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_debt_history_clientname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Tên khách hàng"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Nợ cũ"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_debt_history_clientname"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_debt_history_clientname" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Nợ mới"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_debt_history_clientname"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <TextView
        android:id="@+id/tv_tn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Tổng nợ"
        app:layout_constraintTop_toBottomOf="@+id/textView104"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_debt_history_clientname" />

    <TextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Ngày phát sinh"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_debt_history_clientname"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/tv_item_debt_history_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView23"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_item_debt_history_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_item_debt_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:text="9/9"
        app:layout_constraintBottom_toBottomOf="@+id/textView104"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_item_debt_history_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_debt_history_date" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Trả nợ"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_debt_history_clientname"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/tv_item_debt_history_repay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_debt_history_new" />
</android.support.constraint.ConstraintLayout>